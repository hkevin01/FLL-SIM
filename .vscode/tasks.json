{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "FLL-Sim: Setup Project",
			"type": "shell",
			"command": "python",
			"args": [
				"setup.py"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "FLL-Sim: Run Simulator",
			"type": "shell",
			"command": "python",
			"args": [
				"main.py"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated"
			},
			"problemMatcher": []
		},
		{
			"label": "FLL-Sim: Run Headless Demo",
			"type": "shell",
			"command": "python",
			"args": [
				"main.py",
				"--headless"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "FLL-Sim: Install Dependencies",
			"type": "shell",
			"command": "pip",
			"args": [
				"install",
				"-r",
				"requirements.txt"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "FLL-Sim: Demo Basic Movement",
			"type": "shell",
			"command": "python",
			"args": [
				"main.py",
				"--demo",
				"basic"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "FLL-Sim: Demo Pybricks API",
			"type": "shell",
			"command": "python",
			"args": [
				"main.py",
				"--demo",
				"pybricks"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Compose: Validate Services",
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"-f",
				"docker/docker-compose.yml",
				"config",
				"--services"
			]
		},
		{
			"label": "Compose: Build GUI",
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"-f",
				"docker/docker-compose.yml",
				"build",
				"gui"
			]
		},
		{
			"label": "Compose: Up GUI",
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"-f",
				"docker/docker-compose.yml",
				"up",
				"gui"
			]
		},
		{
			"label": "Docker: Build GUI Container",
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"-f",
				"docker/docker-compose.yml",
				"build",
				"gui"
			],
			"group": "build"
		}
	]
}